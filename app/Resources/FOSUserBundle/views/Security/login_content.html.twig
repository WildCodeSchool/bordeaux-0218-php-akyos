{% trans_default_domain 'FOSUserBundle' %}
<!-- Login Content -->

        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                <div class="push-30-t push-50 animated fadeIn">
                    <!-- Login Title -->
                    <div class="text-center">
                        <div class="logo" style="background-image: url('{{ asset ('img/photos/DMS_logo.pdf')}}')">
                        <p class="text-muted push-15-t">Espace d'authentification</p>
                    </div>
                    <!-- END Login Title -->
                    {% if error %}
                        <div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <!-- Login Form -->
                    <!-- jQuery Validation (.js-validation-login class is initialized in js/pages/base_pages_login.js) -->
                    <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                    <form class="js-validation-login form-horizontal push-30-t" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="form-material form-material-primary floating">
                                    <input class="form-control" type="text" id="login-username" name="_username"
                                           value="{{ last_username }}" required="required" autocomplete="username" />
                                    <label for="login-username">{{ 'Utilisateur'|trans }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="form-material form-material-primary floating">
                                    <input class="form-control" type="password" id="login-password" name="_password"
                                           required="required" autocomplete="current-password" />
                                    <label for="login-password">{{ 'Mot de passe'|trans }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label class="css-input switch switch-sm switch-primary"
                                       for="remember_me"{{ 'security.login.remember_me'|trans }}>
                                    <input type="checkbox" id="remember_me" name="_remember_me"
                                           /><span></span> Se souvenir de moi ?
                                </label>
                            </div>
                        </div>
                        <div class="form-group push-30-t">
                            <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                                <input class="btn btn-sm btn-block btn-primary" type="submit"
                                        id="_submit"
                                        name="_submit" value="{{ 'Valider'|trans }}">
                            </div>
                        </div>
                    </form>
                    <!-- END Login Form -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Login Content -->