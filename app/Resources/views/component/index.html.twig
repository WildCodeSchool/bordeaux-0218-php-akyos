{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des composants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Type</th>
                <th>Photo</th>
                <th>Référence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for component in components %}
            <tr>
                <td><a href="{{ path('component_show', { 'id': component.id }) }}">{{ component.id }}</a></td>
                <td>{{ component.category }}</td>
                <td>{{ component.type }}</td>
                <td>{{ component.photo }}</td>
                <td>{{ component.reference }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('component_show', { 'id': component.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('component_edit', { 'id': component.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('component_new') }}">Créer un nouveau composant</a>
        </li>
    </ul>
{% endblock %}
