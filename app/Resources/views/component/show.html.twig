{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Equipements</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ component.id }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ component.category }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ component.type }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ component.photo }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ component.reference }}</td>
            </tr>
        </tbody>
    </table>
    <div class="block-content block-content-mini block-content-full border-t">
        <div class="row">
            <div class="col-xs-4">
                <a href="{{ path('component_index') }}" class="wizard-prev btn btn-warning">Retour à la liste</a>
            </div>
            <div class="col-xs-4 text-center">
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger" >
                {{ form_end(delete_form) }}
            </div>
            <div class="col-xs-4 text-right">
                <a class="btn btn-success"
                   href="{{ path('component_edit', { 'id': component.id }) }}">Modifier</a>
            </div>
        </div>
    </div>
{% endblock %}
