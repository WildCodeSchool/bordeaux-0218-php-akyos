{% extends 'base.html.twig' %}

{% block body %}
    <h1>Elements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Type</th>
                <th>Photo</th>
                <th>Reference</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td><a href="{{ path('element_show', { 'id': element.id }) }}">{{ element.id }}</a></td>
                <td>{{ element.categorie }}</td>
                <td>{{ element.type }}</td>
                <td>{{ element.photo }}</td>
                <td>{{ element.reference }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('element_show', { 'id': element.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('element_edit', { 'id': element.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('element_new') }}">Create a new element</a>
        </li>
    </ul>
{% endblock %}
