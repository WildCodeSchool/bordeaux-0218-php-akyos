{% extends 'layout.html.twig' %}

{% block body %}
    <h1>List des communs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for common in commons %}
            <tr>
                <td><a href="{{ path('common_show', { 'id': common.id }) }}">{{ common.id }}</a></td>
                <td>{{ common.name }}</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-default"
                           href="{{ path('common_show', { 'id': common.id }) }}">
                            <i class="si si-eye">
                            </i>
                        </a>
                        <a class="btn btn-default"
                           href="{{ path('common_edit', { 'id': common.id }) }}">
                            <i class="fa fa-pencil">
                            </i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success"
       href="{{ path('common_new') }}">Ajouter un commun
    </a>
{% endblock %}
