{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des lots</h1>
    <table class="table table-striped table-borderless table-header-bg">
        <thead>
            <tr>
                <th>Numéro de lot</th>
                <th>Sol</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Mail</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td>{{ unit.number }}</td>
                <td>{{ unit.floor }}</td>
                <td>{{ unit.lastName }}</td>
                <td>{{ unit.firstName }}</td>
                <td>{{ unit.phone }}</td>
                <td>{{ unit.email }}</td>
                <td>{{ unit.comment }}</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-default"
                           href="{{ path('unit_show', { 'id': unit.id }) }}">
                            <i class="si si-eye">
                            </i>
                        </a>
                        <a class="btn btn-default"
                           href="{{ path('unit_edit', { 'id': unit.id }) }}">
                            <i class="fa fa-pencil">
                            </i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unit_new') }}">Ajouter un lot</a>
        </li>
    </ul>
{% endblock %}
