{% extends 'base.html.twig' %}

{% block body %}
    <h1>Units list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Etage</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td><a href="{{ path('unit_show', { 'id': unit.id }) }}">{{ unit.id }}</a></td>
                <td>{{ unit.numero }}</td>
                <td>{{ unit.etage }}</td>
                <td>{{ unit.nom }}</td>
                <td>{{ unit.prenom }}</td>
                <td>{{ unit.telephone }}</td>
                <td>{{ unit.mail }}</td>
                <td>{{ unit.commentaire }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('unit_show', { 'id': unit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('unit_edit', { 'id': unit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unit_new') }}">Create a new unit</a>
        </li>
    </ul>
{% endblock %}
