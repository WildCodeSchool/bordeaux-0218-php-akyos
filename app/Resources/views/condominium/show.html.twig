{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Condominium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ condominium.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ condominium.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ condominium.adress }}</td>
            </tr>
            <tr>
                <th>Condominiummanager</th>
                <td>{{ condominium.condominiumManager }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ condominium.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ condominium.email }}</td>
            </tr>
            <tr>
                <th>Publicmessage</th>
                <td>{{ condominium.publicMessage }}</td>
            </tr>
            <tr>
                <th>Privatemessage</th>
                <td>{{ condominium.privateMessage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('condominium_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('condominium_edit', { 'id': condominium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
