{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Copropriétés</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ condominium.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ condominium.address }}</td>
            </tr>
            <tr>
                <th>Gestionnaire de copropiété</th>
                <td>{{ condominium.condominiumManager }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ condominium.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ condominium.email }}</td>
            </tr>
            <tr>
                <th>Message public</th>
                <td>{{ condominium.publicMessage }}</td>
            </tr>
            <tr>
                <th>Message privé</th>
                <td>{{ condominium.privateMessage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('condominium_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('condominium_edit', { 'id': condominium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
