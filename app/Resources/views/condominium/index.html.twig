{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Listes des copropriétés</h1>
    <table class="table table-striped table-borderless table-header-bg">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Gestionnaire de copropriété</th>
                <th>Téléphone</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for condominium in condominia %}
            <tr>
                <td>{{ condominium.name }}</td>
                <td>{{ condominium.address }}</td>
                <td>{{ condominium.condominiumManager }}</td>
                <td>{{ condominium.phone }}</td>
                <td>{{ condominium.email }}</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-default"
                           href="{{ path('condominium_show', { 'id': condominium.id }) }}">
                            <i class="si si-eye">
                            </i>
                        </a>
                        <a class="btn btn-default"
                           href="{{ path('condominium_edit', { 'id': condominium.id }) }}">
                            <i class="fa fa-pencil">
                            </i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success"
       href="{{ path('condominium_new') }}">Ajouter une copropriété
    </a>
{% endblock %}
