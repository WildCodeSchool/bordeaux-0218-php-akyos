{% extends 'base.html.twig' %}

{% block body %}
    <h1>Batiment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ batiment.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ batiment.nom }}</td>
            </tr>
            <tr>
                <th>Anneedeconstruction</th>
                <td>{{ batiment.anneeDeConstruction }}</td>
            </tr>
            <tr>
                <th>Constructeur</th>
                <td>{{ batiment.constructeur }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ batiment.categorie }}</td>
            </tr>
            <tr>
                <th>Classeenergetique</th>
                <td>{{ batiment.classeEnergetique }}</td>
            </tr>
            <tr>
                <th>Nombredelots</th>
                <td>{{ batiment.nombreDeLots }}</td>
            </tr>
            <tr>
                <th>Nombredetages</th>
                <td>{{ batiment.nombreDEtages }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('batiment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('batiment_edit', { 'id': batiment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
