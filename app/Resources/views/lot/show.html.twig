{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lot.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ lot.numero }}</td>
            </tr>
            <tr>
                <th>Etage</th>
                <td>{{ lot.etage }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ lot.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ lot.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ lot.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ lot.mail }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ lot.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lot_edit', { 'id': lot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
