    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ syndicat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ syndicat.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ syndicat.adress }}</td>
