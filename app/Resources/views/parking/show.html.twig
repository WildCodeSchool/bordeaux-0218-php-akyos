{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parking</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parking.id }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ parking.places }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parking_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parking_edit', { 'id': parking.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
