{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Syndicat de copropriété</h1>
    <table class="table table-striped table-borderless table-header-bg">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ syndicate.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ syndicate.address }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ syndicate.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ syndicate.email }}</td>
            </tr>
            <tr>
                <th>Gestionnaire de copropriétés</th>
                <td>{{ syndicate.condominiumManager }}</td>
            </tr>
        </tbody>
    </table>
    <div class="block-content block-content-mini block-content-full border-t">
        <div class="row">
            <div class="col-xs-4">
                <a href="{{ path('syndicate_index') }}" class="wizard-prev btn btn-warning">Retour à la liste</a>
            </div>
            <div class="col-xs-4 text-center">
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger" >
                {{ form_end(delete_form) }}
            </div>
            <div class="col-xs-4 text-right">
                <a class="btn btn-success"
                   href="{{ path('syndicate_edit', { 'id': syndicate.id }) }}">Modifier</a>
            </div>
        </div>
    </div>
{% endblock %}
