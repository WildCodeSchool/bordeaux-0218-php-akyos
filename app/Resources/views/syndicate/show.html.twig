{% extends 'base.html.twig' %}

{% block body %}
    <h1>Syndicate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ syndicate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ syndicate.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ syndicate.adress }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ syndicate.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ syndicate.email }}</td>
            </tr>
            <tr>
                <th>Condominiummanager</th>
                <td>{{ syndicate.condominiumManager }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('syndicate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('syndicate_edit', { 'id': syndicate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
