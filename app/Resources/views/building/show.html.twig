{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Building</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>Année de construction</th>
                <td>{{ building.constructionYear }}</td>
            </tr>
            <tr>
                <th>Constructeur</th>
                <td>{{ building.constructor }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ building.category }}</td>
            </tr>
            <tr>
                <th>Classe énergétique</th>
                <td>{{ building.energyClass }}</td>
            </tr>
            <tr>
                <th>Nombre d'unité</th>
                <td>{{ building.unitsNumber }}</td>
            </tr>
            <tr>
                <th>Nombre de planchers</th>
                <td>{{ building.floorsNumber }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('building_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('building_edit', { 'id': building.id }) }}">Créer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
