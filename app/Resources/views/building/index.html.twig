{% extends 'layout.html.twig' %}

{% block body %}
    <h1>liste des bâtiments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Année de contruction</th>
                <th>Constructeur</th>
                <th>catégorie</th>
                <th>Classe enegetique</th>
                <th>Nombre d'appartements</th>
                <th>Nombre d'étages</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for building in buildings %}
            <tr>
                <td><a href="{{ path('building_show', { 'id': building.id }) }}">{{ building.id }}</a></td>
                <td>{{ building.name }}</td>
                <td>{{ building.constructionYear }}</td>
                <td>{{ building.constructor }}</td>
                <td>{{ building.category }}</td>
                <td>{{ building.energyClass }}</td>
                <td>{{ building.unitsNumber }}</td>
                <td>{{ building.floorsNumber }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('building_show', { 'id': building.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('building_edit', { 'id': building.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('building_new') }}">Ajouter un bâtiment</a>
        </li>
    </ul>
{% endblock %}
