{% extends 'base.html.twig' %}

{% block body %}
    <h1>Syndics list</h1>

    <table class="tablep b  ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Chargécopro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <div class="block pull-r-l">
            <div class="block-header bg-gray-lighter">
                <ul class="block-options">
                    <li>
                        <button type="button" data-toggle="block-option" data-action="refresh_toggle" data-action-mode="demo"><i class="si si-refresh"></i></button>
                    </li>
                    <li>
                        <button type="button" data-toggle="block-option" data-action="content_toggle"></button>
                    </li>
                </ul>
                <h3 class="block-title">Block</h3>
            </div>
            <div class="block-content">

            </div>
        </div>
        {% for syndic in syndics %}
            <tr>
                <td><a href="{{ path('syndic_show', { 'id': syndic.id }) }}">{{ syndic.id }}</a></td>
                <td>{{ syndic.nom }}</td>
                <td>{{ syndic.adresse }}</td>
                <td>{{ syndic.telephone }}</td>
                <td>{{ syndic.email }}</td>
                <td>{{ syndic.chargeCopro }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('syndic_show', { 'id': syndic.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('syndic_edit', { 'id': syndic.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('syndic_new') }}">Create a new syndic</a>
        </li>
    </ul>
{% endblock %}
