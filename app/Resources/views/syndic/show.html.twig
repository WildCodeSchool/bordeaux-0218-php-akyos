{% extends 'base.html.twig' %}

{% block body %}
    <h1>Syndic</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ syndic.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ syndic.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ syndic.adresse }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ syndic.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ syndic.email }}</td>
            </tr>
            <tr>
                <th>Chargécopro</th>
                <td>{{ syndic.chargeCopro }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('syndic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('syndic_edit', { 'id': syndic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
