<table class="table table-striped table-borderless table-header-bg">
    <thead>
    <tr>
        <th>Lieu</th>
        <th>Type d'intervention</th>
        <th>Niveau d'urgence
        <th>Progression</th>
    </tr>
    </thead>
    <tbody>
    {% for intervention in interventions %}
        <tr>

            <td>
                {% if intervention.condominium is not empty %}
                    {{ intervention.condominium.name }}
                {% endif %}
            </td>
            <td>{{ intervention.interventionType|trans }}</td>
            <td>
                    <span class="label label-{{ intervention.emergency }}">
                        {{ intervention.emergency|trans }}
                    </span>
            </td>
             <td>{{ intervention.progress }}</td>
        </tr>
        {% else %}
        <tr><td colspan="4">{{ 'no intervention to display'|trans }}</td></tr>
    {% endfor %}
    </tbody>
</table>