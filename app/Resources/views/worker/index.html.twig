{% extends 'base.html.twig' %}

{% block body %}
    <h1>Workers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Specialite</th>
                <th>Adresse</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for worker in workers %}
            <tr>
                <td><a href="{{ path('worker_show', { 'id': worker.id }) }}">{{ worker.id }}</a></td>
                <td>{{ worker.nom }}</td>
                <td>{{ worker.prenom }}</td>
                <td>{{ worker.telephone }}</td>
                <td>{{ worker.specialite }}</td>
                <td>{{ worker.adresse }}</td>
                <td>{{ worker.mail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('worker_show', { 'id': worker.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('worker_edit', { 'id': worker.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worker_new') }}">Create a new worker</a>
        </li>
    </ul>
{% endblock %}
