{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Worker</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ worker.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ worker.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ worker.firstName }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ worker.phone }}</td>
            </tr>
            <tr>
                <th>Competence</th>
                <td>{{ worker.competence }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ worker.address }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ worker.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worker_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('worker_edit', { 'id': worker.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
