<div class="row text-center">
    <div class="col-sm-12">
        <a class="block block-link-hover3 text-center" href="{{ path('intervention_new') }}">
            <div class="block-content block-content-full">
                <div class="h1 font-w700"><i class="fa fa-pencil"></i></div>
                <p>Créer une nouvelle demande d'intervention</p>
            </div>
        </a>
    </div>
</div>
<div class="block-content">
    <div class="block-content block-content-full">
        <div class="row text-center">
            <h2>Interventions du jour</h2>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <!-- Billing Address -->
                <div class="block block-bordered">
                    {% for intervention in interventions %}
                        <div class="col-sm-3">
                            <div class="block block-themed">
                                <div class="block-header bg-primary">
                                    <ul class="block-options">
                                        <li>
                                            <button type="button"><i class="si si-settings"></i></button>
                                        </li>
                                    </ul>
                                    <h3 class="block-title"></h3>
                                </div>
                                <div class="block-content">
                                    <p>{{ intervention.description }}
                                    <em>{{ intervention.interventionType }}</em></p>
                                </div>
                            </div>
                        </div>
                        {% else %}
                            <p>Aucune interventions prévues aujourd'hui</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
